<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tip_item"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingRight="3dp"
        android:text="LSZ"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nume_item"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingRight="3dp"
        android:text="123"
        android:gravity="left"
        android:layout_toStartOf="@+id/valoare_item"
        android:layout_toLeftOf="@+id/valoare_item"
        android:layout_toRightOf="@+id/tip_item"
        android:layout_toEndOf="@+id/tip_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="123"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingLeft="3dp"
        android:id="@+id/valoare_item"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/nume_item"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nume_item"
        android:layout_alignParentRight="true" />

</RelativeLayout>