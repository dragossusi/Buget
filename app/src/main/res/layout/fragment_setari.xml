<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nume:"
            android:paddingLeft="3dp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:paddingRight="3dp"
            android:id="@+id/etxt_nume"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seteaza"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="setarenume"
            android:layout_below="@+id/buget_edit"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buget_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/buget_edit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schimba poza"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="phchange"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:paddingRight="3dp"
            android:id="@+id/buget_edit"
            android:layout_below="@+id/etxt_nume"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buget:"
            android:paddingLeft="3dp"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/buget_edit"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

</RelativeLayout>