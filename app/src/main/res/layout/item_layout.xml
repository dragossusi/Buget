<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nume_item"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingRight="3dp"
        android:text="nume"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/valoare_item"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/valoare_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="valoare"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingLeft="3dp"
        android:id="@+id/valoare_item"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/nume_item"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nume_item"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="bucati"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingLeft="3dp"
        android:id="@+id/bucati_item"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="bucati"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingLeft="3dp"
        android:id="@+id/id_item"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentLeft="true" />

</RelativeLayout>